extends layout

block content
	.container
		h1 Applicants
		table.table.table-striped
			thead
				tr 
					th Name
					th Bio
					th Skills
					th YoE
					th Why
					th Delete
			tbody
				tr 
					td #{applicant.name}
					td #{applicant.bio}
					td: ul
						for skill in applicant.skills
							li= skill
					td #{applicant.years}
					td #{applicant.why}
					td: a(href='/applicants/remove/#{applicant._id}').button.remove-applicant Delete
		a(href='/applicants') Back to applicants list